<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/toastLayoutMarginAndPadding"
    android:padding="@dimen/toastLayoutMarginAndPadding"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_toast_info">

        <TextView
            android:id="@+id/toastTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/toastTextViewPadding"
            android:text=""
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>
</LinearLayout>